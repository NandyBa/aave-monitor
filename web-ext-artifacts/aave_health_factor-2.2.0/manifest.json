{
    "manifest_version": 3,
    "name": "Aave Health Factor",
    "version": "2.2.0",
    "description": "Monitor Aave health factor",
    "action": {
        "default_popup": "js/index.html"
    },
    "permissions": [
        "storage",
        "alarms"
    ],
    "background": {
        "scripts": ["js/background.js"],
        "type": "module"
    },
    "icons": {
        "16": "public/icon128.png",
        "32": "public/icon128.png",
        "48": "public/icon128.png",
        "128": "public/icon128.png"
    },
    "options_ui": {
        "page": "public/options.html",
        "open_in_tab": true
    }
}